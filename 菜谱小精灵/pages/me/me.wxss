.bg{
  width:100%;
  height: 150px;
  background-color: #494040;
}
.head{
  display: flex;
  flex-direction: row;
}
.headIcon{
  margin:10px;
}
.headIcon image{
  border-radius: 50%;
}
.login{
  color: #ffffff;
  font-size: 15px;
  font-weight: bold;
  position: absolute;
  left:100px;
  margin-top: 30px;
}
.detail{
  color: #ffffff;
  font-size: 15px;
  position: absolute;
  right: 10px;
  margin-top:30px;
}
.coount{
  display:flex;
  flex-direction: row;
}
.desc{
  width: 33%;
  text-align: center;
  font-size: 13px;
  color: #ffffff;
  line-height:20px;
  border-right: 1px solid #cccccc;
  display: flex;
}
.nav{
  display: flex;
  flex-direction: row;
  text-align: center;
}
.nav-item{
  width: 33%;
  font-size: 13px;
  padding-top: 10px;
  padding-bottom:10px;
}
.item{
  display: flex;
  flex-direction: row;
}
.hr{
  width: 100%;
  height: 15px;
  background-color: #cccccc;
}
.order{
  padding-top: 15px;
  padding-left: 15px;
  padding-bottom: 15px;
  font-size: 15px;
}
.detail2{
  font-size: 15px;
  position: absolute;
  right:10px;
  height: 50px;
  line-height: 50px;
  color: #888888;
}